   term.setCursorPos(9, 9)
   print("Computer wird neu gestartet...")
   sleep(2)
   os.reboot()
  else slc = 2
  drawDesktop2()
 end
  
  elseif slc == 20 then
  if X >=20 and X <= 26 and Y == 2 and button == 1 then
  term.clear()
  elseif X >= 20 and X <= 26 and Y == 3 and button == 1 then
  shell.run("settings")
  elseif X >= 20 and X <= 26 and Y == 4 and button == 1 then
