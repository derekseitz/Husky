function login()
term.clear()

term.setCursorPos(1,1)
print("Einloggen")
  term.setTextColor(32)
  term.setCursorPos(30, 18)
  print("OS-Version: "..Version)
  term.setTextColor(256)
term.setCursorPos(1,3)
write("Benutzername: ")
usrName = read()
write("Passwort: ")
local pass = read("*")
file = fs.open("users/"..usrName,"r")
if not fs.exists("users/"..usrName) then
term.clear()
term.setCursorPos(1,1)
print("Login gescheitert!")
sleep(1)
term.clear()
drawDesktop()
elseif fs.exists("users/"..usrName) then
local fileData = {}
local line = file.readLine()
repeat
table.insert(fileData, line)
line = file.readLine()
until line == nil -- readLine()
file.close()
local passFromFile = fileData[1]
if pass == passFromFile then
term.clear()
term.setCursorPos(1,1)
print("Login erfolgreich!")
sleep(1)
term.clear()
drawDesktop2()
else
term.clear()
term.setCursorPos(1,1)
print("Login gescheitert!")
sleep(1)
term.clear()
drawDesktop()
end
end
end

function register()
