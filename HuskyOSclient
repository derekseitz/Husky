 end
    elseif slc == 7 then
	 if X >= 12 and X <= 22 and Y == 3 and button == 1 then slc = 8
	 trivia()
	 else
	 slc = 2
	 drawDesktop2()
 end
    elseif slc == 8 then
	 if X >= 1 and X <= 12 and Y == 1 and button == 1 then slc = 9
	 drawMenu5()
	 else
	 slc = 7
	 trivia()
     end
    elseif slc == 9 then
