	 term.clear()
	 slc = 2
	 drawDesktop2()
	 elseif X >= 1 and X <= 12 and Y == 4 and button == 1 then slc = 2
	 term.clear()
	 drawDesktop2()
	 else slc = 8
	 trivia()
	end
end
end
end

